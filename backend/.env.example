# Application Configuration
APP_NAME="Citation Network Explorer API"
APP_VERSION="2.0.0"
HOST="127.0.0.1"
PORT=8000
DEBUG=false
ENVIRONMENT="development"

# Security
SECRET_KEY="your-super-secret-key-here-at-least-32-characters-long"
SESSION_SECRET="your-session-secret-here"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database - Neo4j
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="your-neo4j-password"
NEO4J_DATABASE="neo4j"

# Database - Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,https://localhost:3000"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000
API_RATE_LIMIT_PER_MINUTE=30
SEARCH_RATE_LIMIT_PER_MINUTE=10

# External APIs
AWS_DYNAMO_REGION=""
AWS_DYNAMO_TABLE=""
API_MICROSOFT_KEY=""
OPENALEX_EMAIL=""
SEMANTIC_SCHOLAR_API_KEY=""
API_OADOI_EMAIL=""
API_ZOTERO_APP_KEY=""
API_ZOTERO_APP_SECRET=""
CROSSREF_EMAIL=""

# Background Tasks - Celery
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"
CELERY_TASK_SERIALIZER="json"
CELERY_RESULT_SERIALIZER="json"
CELERY_TIMEZONE="UTC"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Health Checks
HEALTH_CHECK_INTERVAL=30
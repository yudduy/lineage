# Citation Network Explorer API - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="Citation Network Explorer API"
APP_VERSION="1.0.0"
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Security Settings (REQUIRED)
SECRET_KEY=your_very_secure_secret_key_here_change_this_in_production
TRUSTED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration (REQUIRED)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_neo4j_password_here
NEO4J_DATABASE=neo4j

# Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# For Docker deployment, Neo4j and Redis URLs change to:
# NEO4J_URI=bolt://neo4j:7687
# REDIS_URL=redis://redis:6379

# OpenAlex API Configuration (Optional - for higher rate limits)
OPENALEX_EMAIL=your_email@domain.com
OPENALEX_RATE_LIMIT=10
OPENALEX_MAX_RETRIES=3

# Network Building Limits
MAX_DEPTH=3
MAX_NODES_PER_LEVEL=50

# CORS Configuration (Update for production)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text

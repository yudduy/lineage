# Environment configuration for Docker deployment
# Copy this to .env and update with your values

# Database passwords (REQUIRED)
NEO4J_PASSWORD=your_secure_neo4j_password_here
REDIS_PASSWORD=your_redis_password_here

# Application security (REQUIRED)
SECRET_KEY=your_very_secure_secret_key_here_change_this_in_production

# Database users (optional, defaults shown)
NEO4J_USER=neo4j

# Optional settings
OPENALEX_EMAIL=your_email@domain.com
